@model UniApp.ViewModelsFilter.TeachersFilter

@{
    ViewData["Title"] = "Teachers";
}

<h2>Teachers</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>


<form asp-controller="Teachers" asp-action="Index" method="get">
    <p>
        First Name: <input type="text" asp-for="searchFirstName" />
        Last Name: <input type="text" asp-for="searchLastName" />
        Degree: <input type="text" asp-for="searchDegree" />
        Academic Rank: <input type="text" asp-for="searchAcademicRank" />
        <input type="submit" value="Filter"/>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].Degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].AcademicRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].OfficeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].HireDate)
            </th>
            <th>
               Courses as first teacher
            </th>
            <th>
                Courses as second teacher
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].ProfilePicture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Teachers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicRank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @foreach (var course in item.FirstCourses)
                {
                    <a asp-controller="Teachers" asp-action="CourseList" asp-route-id="@course.Id">@course.Title</a><br />
                }
            </td>
            <td>
                @foreach (var course in item.SecondCourses)
                {
                    <a asp-controller="Teachers" asp-action="CourseList" asp-route-id="@course.Id">@course.Title</a><br />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfilePicture)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
